{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "target": "ES5",
    "lib": ["es2021"],
    "module": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "incremental": true,
    "preserveSymlinks": true,
    "isolatedModules": true
  }
}
